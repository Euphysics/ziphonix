# エディターの基本設定
root = true

# 全てのファイルに適用される共通設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript ファイルの設定
[*.ts]
indent_size = 2
tab_width = 2
# TypeScript 特有の設定があれば追加

[*.tsx]
indent_size = 2
tab_width = 2
# JSX を含む TypeScript ファイル向けの設定

# JavaScript ファイルの設定（必要に応じて）
[*.js]
indent_size = 2
tab_width = 2

[*.jsx]
indent_size = 2
tab_width = 2

# Golang ファイルの設定
[*.go]
indent_style = tab
indent_size = 4
# Go は一般的にタブを使用

# JSON ファイルの設定
[*.json]
indent_size = 2

# YAML ファイルの設定
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Markdown ファイルの設定
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 3

# Dockerfile の設定
[Dockerfile]
indent_style = tab

# Makefile の設定
[Makefile]
indent_style = tab
